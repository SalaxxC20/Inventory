{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ES2015",
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
